{
"manifest_version": 2,
  "name": "Autofill by Corail",
  "description": "Accurate, secure and private autofill that will make your life easier.",
  "version": "5.0.0",
  "author": "Made with love <3",

  "permissions": [
                "http://*/",
                "https://*/",
                "tabs",
                "storage"
  ],
  "optional_permissions": [
             	"webRequest"
  ],
  "browser_action": {
    "default_icon": "logo_corail.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "config/main_config.js",
      "config/heuristic_config.js",
      "config/pivot_config.js",
      "lib/globalvar.js",
      "lib/input.js",
      "lib/api_back.js",
      "lib/utils.js",
      "lib/heuristics.js",
      "front_db/back_management.js",
      "front_db/profil.js",
      "front_db/user_db.js",
      "front_db/website_db.js",
      "lib/graphical_profil.js",
      "lib/onChange.js",
      "lib/fill_field.js",
      "front.js"],
    "css": ["styles/visited_pages.css","/static/css/app.css", "/static/css/content.css"]
  }
  ]
}
