{
"manifest_version": 2,
  "name": "Autofill by Corail",
  "description": "Accurate, secure and private autofill that will make your life easier.",
  "version": "7",
  "author": "Made with love <3",

  "permissions": [
                "http://*/",
                "https://*/",
                "tabs",
                "storage"
  ],
  "optional_permissions": [
             	"webRequest"
  ],
  "browser_action": {
    "default_icon": "logo_corail.png",
    "default_popup": "index.html"
	},
	"background": {
		"scripts": 
			[
				"config/main_config.js",
				"config/pivot_config.js",
				"lib/utils.js",
				"lib/profil/raw_api.js",
			  "lib/profil/profil.js",
			  "front_db/back_management.js",
				"lib/background/background_profil.js"
			]
	},
  "content_scripts": [
    {
		"matches": ["<all_urls>"],
		"run_at": "document_start",
		"js": ["config/main_config.js",
		"config/pivot_config.js",
		"config/heuristic_config.js",
		"lib/pivot_translation.js",
		"lib/globalvar.js",
		"lib/input.js",
		"lib/raw_api.js",
		"lib/utils.js",
		"lib/login/utils.js",
		"lib/profil/utils.js",
		"lib/heuristics.js",
		"front_db/user_db.js",
		"front_db/website_db.js",
		"lib/profil/profil.js",
		"lib/profil/raw_api.js",
		"lib/profil/algo.js",
		"lib/profil/graphical.js",
		"lib/login/raw_api.js",
		"lib/login/login.js",
		"lib/login/algo.js",
		"lib/login/detection.js",
		"lib/login/graphical.js",
		"front_db/back_management.js",
		"lib/fill_field.js",
		"lib/preload_front.js"]
    },
  	{
		"matches": [
		"<all_urls>"
		],
		"js": [
			"front.js"],
		"css": ["styles/visited_pages.css","/static/css/app.css", "/static/css/content.css"]
  	}
  ]
}
